class Solution {
    public static int findEquilibrium(int arr[]) {
        // code here
        int totalsum=0;
        for(int nums:arr){
            totalsum+=nums;
        }
        int leftsum=0;
        for(int i=0;i<arr.length;i++){
            totalsum-=arr[i];
            if(leftsum==totalsum){
                return i;
            }
            leftsum+=arr[i];
        }
        return -1;
    }
}
